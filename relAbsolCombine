margin: 5px 40px; 
}

/***** little boxes *****/
div.upperleft, div.upperright, div.lowerleft, div.lowerright { 
position: absolute;
width: 30px;
height: 30px;
}

/***** positioning values for little boxes *****/

div.upperleft {
left: 1%;
top: 0;
border: 6px solid #f00;
}

div.upperright {
right: 0;
top: 0;
border: 6px solid #f00;
}

div.lowerleft {
left: 0;
bottom: 0;
border: 6px solid #00f;
}

div.lowerright {
right: 0;
bottom: 0;
border: 6px solid #00f;
}



